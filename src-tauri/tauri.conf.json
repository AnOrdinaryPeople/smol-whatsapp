{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WhatsApp Wrapper",
  "version": "0.1.0",
  "identifier": "com.anordinarypeople.whats-app-wrapper",
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "WhatsApp",
        "width": 1000,
        "height": 800,
        "resizable": true,
        "url": "https://web.whatsapp.com",
        "userAgent": "Mozilla/5.0 (X11; Linux x86_64; rv:107.0) Gecko/20100101 Firefox/107.0"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.ico"
    ]
  }
}
